{
  "scripts": {
    "serve": "live-server public --host=localhost --port=8080 --no-browser",
    "compile": "tailwindcss -i src/tailwind.css -o public/assets/styles/main.css",
    "watch": "npm run compile -- --watch",
    "dev": "run-p watch serve",
    "build": "npm run compile -- --minify"
  },
  "devDependencies": {
    "live-server": "1.2.2",
    "tailwindcss": "^3.1.8",
    "npm-run-all": "^4.1.5"
  }
}
